rofi.key-run: SuperL-space
rofi.key-ssh: SuperL-s
rofi.key-window: SuperL-Tab
rofi.fuzzy: true
rofi.terminal: evilvte
rofi.ssh-command: {terminal} -e env TERM=xterm-256color {ssh-client} {host}
